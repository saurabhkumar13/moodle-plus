<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    android.support.v7.cardview:cardElevation="5dp"
    android:layout_margin="5dp"
    android:id="@+id/cv"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ass_head"
            >
            <TextView
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:gravity="end"
                android:text="2015 Semester 2"
                />
            <TextView
                android:paddingTop="24dp"
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:textSize="24sp"
                android:text = "COP290 : Design Practices in Computer Science"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createdOn"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:text="Course structure 0-0-6 with 3 credits"
            android:layout_below="@+id/ass_head"
            />
        <TextView
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:textSize="16sp"
            android:maxLines="5"
            android:text = "This is a test assignment description i just wanna test this stuff out once"
            android:layout_below="@+id/createdOn"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>